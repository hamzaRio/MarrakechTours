{
  "include": [
    "**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "dev/viteHelpers.ts"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "noImplicitAny": false,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "paths": {
      "@shared/*": [
        "../shared/*"
      ]
    }
  }
}